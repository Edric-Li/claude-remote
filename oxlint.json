{
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "no-unused-vars": "warn",
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "no-duplicate-imports": "error"
  },
  "ignore": ["node_modules", "dist", "build", ".next", "coverage", "*.min.js", "*.config.js"]
}
