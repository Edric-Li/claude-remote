#!/usr/bin/env node

const { AgentWorker } = require('../dist/agent-worker')

// è§£æå‘½ä»¤è¡Œå‚æ•°
const args = process.argv.slice(2)
let serverUrl = 'http://localhost:3000'
let agentName = `Agent-${process.pid}`
let authToken = ''

// ç®€å•çš„å‚æ•°è§£æ
for (let i = 0; i < args.length; i++) {
  if (args[i] === '--server' || args[i] === '-s') {
    serverUrl = args[i + 1]
    i++
  } else if (args[i] === '--name' || args[i] === '-n') {
    agentName = args[i + 1]
    i++
  } else if (args[i] === '--key' || args[i] === '-k') {
    authToken = args[i + 1]
    i++
  } else if (args[i] === '--help' || args[i] === '-h') {
    console.log(`
AI Orchestra Agent Worker

Usage:
  ai-orchestra-agent [options]

Options:
  -s, --server <url>   Server URL (default: http://localhost:3000)
  -n, --name <name>    Agent name (default: Agent-<pid>)
  -k, --key <key>      Authentication key
  -h, --help           Show this help message

Example:
  ai-orchestra-agent --key YOUR-SECRET-KEY --server http://localhost:3000 --name "My Agent"
`)
    process.exit(0)
  }
}

// åˆ›å»ºå¹¶å¯åŠ¨ Agent Worker
const worker = new AgentWorker({
  serverUrl,
  name: agentName,
  token: authToken,
  capabilities: ['claude-code', 'cursor', 'qucoder']
})

console.log('ğŸš€ Starting AI Orchestra Agent Worker...')
console.log(`ğŸ“¡ Server: ${serverUrl}`)
console.log(`ğŸ¤– Agent: ${agentName}`)
console.log(`ğŸ”‘ Key: ${authToken ? '***' + authToken.slice(-4) : 'None'}`)
console.log('')

worker.start().catch(error => {
  console.error('âŒ Failed to start agent:', error.message)
  process.exit(1)
})

// ä¼˜é›…å…³é—­
process.on('SIGINT', () => {
  console.log('\n\nğŸ‘‹ Received shutdown signal...')
  worker.stop()
})

process.on('SIGTERM', () => {
  worker.stop()
})